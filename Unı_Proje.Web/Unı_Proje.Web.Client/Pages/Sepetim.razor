@page "/sepetim"
@using Uný_Proje.Web.Client.Services
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject SepetServis SepetServis

@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Sepetim</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="bi bi-cart3 me-2"></i>
                    Sepetim
                </h2>
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Alýþveriþe Devam Et
                </a>
            </div>
        </div>
    </div>

    @if (yukleniyor)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status"></div>
            <p class="mt-2 text-muted fs-5">Sepet yükleniyor...</p>
        </div>
    }
    else if (!sepetUrunleri.Any())
    {
        <div class="text-center my-5">
            <div class="fs-1"><span>&#128722;</span></div>
            <h4 class="text-muted mt-3">Sepetiniz Boþ</h4>
            <p class="text-muted">Henüz sepetinize ürün eklemediniz.</p>
            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-search me-2"></i>
                Ürünlere Göz At
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in sepetUrunleri)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    @if (!string.IsNullOrEmpty(item.ResimUrl))
                                    {
                                        <img src="@item.ResimUrl" class="img-fluid rounded" alt="@item.UrunAd" 
                                             style="max-height: 150px; object-fit: contain;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                             style="height: 150px;">
                                            <span class="text-muted"><span>&#128247;</span></span>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-5">
                                    <h5 class="card-title mb-2">@item.UrunAd</h5>
                                    <p class="text-muted small mb-0">
                                        <i class="bi bi-tag me-1"></i>
                                        @item.KategoriAd
                                    </p>
                                </div>
                                <div class="col-md-2 text-center">
                                    <p class="fw-bold text-success fs-5 mb-0">
                                        @item.Fiyat.ToString("N2") <span>&#8378;</span>
                                    </p>
                                </div>
                                <div class="col-md-2 text-end">
                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => SepettenCikar(item.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Sipariþ Özeti</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Ürün Sayýsý:</span>
                            <strong>@sepetUrunleri.Count</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Toplam:</h5>
                            <h5 class="text-success">@ToplamFiyat.ToString("N2") <span>&#8378;</span></h5>
                        </div>
                        <button class="btn btn-success w-100" @onclick="SatinAl" disabled="@satinAliniyor">
                            @if (satinAliniyor)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Ýþleniyor...</span>
                            }
                            else
                            {
                                <i class="bi bi-check-circle me-2"></i>
                                <span>Satýn Al</span>
                            }
                        </button>
                        <small class="text-muted d-block mt-2 text-center">
                            <i class="bi bi-shield-check me-1"></i>
                            Güvenli Ödeme
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<SepetItem> sepetUrunleri = new();
    private bool yukleniyor = true;
    private bool satinAliniyor = false;
    private decimal ToplamFiyat => sepetUrunleri.Sum(x => x.Fiyat);

    protected override async Task OnInitializedAsync()
    {
        await SepetYukle();
    }

    private async Task SepetYukle()
    {
        yukleniyor = true;
        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            var (items, hata) = await SepetServis.SepetGetir(token);
            sepetUrunleri = items;
            
            if (!string.IsNullOrEmpty(hata))
            {
                await JSRuntime.InvokeVoidAsync("alert", $"?? {hata}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"? Beklenmeyen hata: {ex.Message}");
        }
        finally
        {
            yukleniyor = false;
        }
    }

    private async Task SepettenCikar(int id)
    {
        var onay = await JSRuntime.InvokeAsync<bool>("confirm", "Bu ürünü sepetten çýkarmak istediðinize emin misiniz?");
        if (!onay) return;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            var sonuc = await SepetServis.SepettenCikar(id, token);
            
            if (sonuc.BasariliMi)
            {
                await SepetYukle();
                await JSRuntime.InvokeVoidAsync("alert", $"? {sonuc.Mesaj}");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"? {sonuc.Mesaj}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"? Beklenmeyen hata: {ex.Message}");
        }
    }

    private async Task SatinAl()
    {
        var onay = await JSRuntime.InvokeAsync<bool>("confirm", $"Toplam {ToplamFiyat:N2} ? tutarýndaki sipariþi onaylýyor musunuz?");
        if (!onay) return;

        satinAliniyor = true;
        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            var sonuc = await SepetServis.SatinAl(token);
            
            if (sonuc.BasariliMi)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"?? {sonuc.Mesaj}");
                await SepetYukle();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"? {sonuc.Mesaj}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"? Beklenmeyen hata: {ex.Message}");
        }
        finally
        {
            satinAliniyor = false;
        }
    }
}
