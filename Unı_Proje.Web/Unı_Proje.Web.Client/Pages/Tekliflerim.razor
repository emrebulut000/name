@page "/tekliflerim"
@using Uný_Proje.Web.Client.Services
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject TeklifServis TeklifServis
@inject SepetServis SepetServis

@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Tekliflerim</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-tag-fill text-warning me-2"></i>
            Gönderdiðim Teklifler
        </h2>
    </div>

    @if (yukleniyor)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-3 text-muted">Teklifleriniz yükleniyor...</p>
        </div>
    }
    else if (!teklifler.Any())
    {
        <div class="text-center my-5">
            <div class="fs-1"><span>&#128176;</span></div>
            <h4 class="text-muted mt-3">Henüz teklif göndermediniz</h4>
            <p class="text-muted">Beðendiðiniz ürünlere teklif vererek pazarlýk yapabilirsiniz.</p>
            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-search me-2"></i>
                Ürünlere Göz At
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var teklif in teklifler)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="position-relative">
                            <img src="@(teklif.UrunResim ?? "https://via.placeholder.com/300x200?text=Resim+Yok")" 
                                 class="card-img-top" 
                                 style="height: 200px; object-fit: cover;"
                                 alt="@teklif.UrunAd">
                            <span class="position-absolute top-0 end-0 badge bg-@GetDurumRenk(teklif.Durum) m-2">
                                @teklif.DurumText
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-truncate" title="@teklif.UrunAd">
                                @teklif.UrunAd
                            </h5>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">Satýþ Fiyatý:</small>
                                <strong class="text-muted">@teklif.UrunFiyat.ToString("N2") <span>&#8378;</span></strong>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-primary">Teklifiniz:</small>
                                <strong class="text-primary fs-5">@teklif.TeklifTutari.ToString("N2") <span>&#8378;</span></strong>
                            </div>

                            <hr />

                            @if (!string.IsNullOrEmpty(teklif.Aciklama))
                            {
                                <div class="alert alert-light small mb-2">
                                    <strong>Mesajýnýz:</strong> @teklif.Aciklama
                                </div>
                            }

                            @if (teklif.Durum == "KabulEdildi" && !string.IsNullOrEmpty(teklif.SaticiYaniti))
                            {
                                <div class="alert alert-success small mb-2">
                                    <i class="bi bi-check-circle-fill me-1"></i>
                                    <strong>Satýcý:</strong> @teklif.SaticiYaniti
                                </div>
                            }
                            else if (teklif.Durum == "Reddedildi" && !string.IsNullOrEmpty(teklif.SaticiYaniti))
                            {
                                <div class="alert alert-danger small mb-2">
                                    <i class="bi bi-x-circle-fill me-1"></i>
                                    <strong>Satýcý:</strong> @teklif.SaticiYaniti
                                </div>
                            }

                            <div class="small text-muted mb-2">
                                <i class="bi bi-person me-1"></i>
                                <strong>Satýcý:</strong> @teklif.SaticiAd
                            </div>

                            <div class="small text-muted mb-3">
                                <i class="bi bi-clock me-1"></i>
                                @teklif.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")
                            </div>

                            <div class="d-grid gap-2">
                                <a href="/urun-detay/@teklif.UrunId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>
                                    Ürünü Görüntüle
                                </a>
                                
                                @if (teklif.Durum == "Bekliyor")
                                {
                                    <button class="btn btn-danger btn-sm" @onclick="() => TeklifiIptalEt(teklif.Id)">
                                        <i class="bi bi-x-circle me-1"></i>
                                        Teklifi Ýptal Et
                                    </button>
                                }
                                else if (teklif.Durum == "KabulEdildi")
                                {
                                    <button class="btn btn-success btn-sm" @onclick="() => SepeteEkleVeGit(teklif.UrunId)">
                                        <i class="bi bi-cart-plus me-1"></i>
                                        Sepete Ekle (@teklif.TeklifTutari.ToString("N2") <span>&#8378;</span>)
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<TeklifDto> teklifler = new();
    private bool yukleniyor = true;

    protected override async Task OnInitializedAsync()
    {
        await TeklifleriYukle();
    }

    private async Task TeklifleriYukle()
    {
        yukleniyor = true;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            var (liste, hata) = await TeklifServis.GonderdigimTeklifleriGetir(token);
            
            if (string.IsNullOrEmpty(hata) && liste != null)
            {
                teklifler = liste;
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Hata: {hata}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            yukleniyor = false;
        }
    }

    private async Task TeklifiIptalEt(int teklifId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Bu teklifi iptal etmek istediðinizden emin misiniz?"))
            return;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            var sonuc = await TeklifServis.TeklifiIptalEt(teklifId, token);
            
            if (sonuc.BasariliMi)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Teklif iptal edildi.");
                await TeklifleriYukle();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Hata: {sonuc.Mesaj}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task SepeteEkleVeGit(int urunId)
    {
        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            // Kabul edilen teklifin bilgilerini al
            var kabulEdilenTeklif = teklifler.FirstOrDefault(t => t.UrunId == urunId && t.Durum == "KabulEdildi");
            
            // Sepete ekle (teklif ID ile, özel fiyatla eklenecek)
            var sonuc = await SepetServis.SepeteEkle(urunId, token, kabulEdilenTeklif?.Id);
            
            if (sonuc.BasariliMi)
            {
                var cevap = await JSRuntime.InvokeAsync<bool>("confirm", 
                    "Ürün pazarlýk fiyatýyla sepetinize eklendi! Sepete gitmek ister misiniz?");
                
                if (cevap)
                {
                    Navigation.NavigateTo("/sepetim");
                }
                else
                {
                    await TeklifleriYukle(); // Listeyi yenile
                }
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Hata: {sonuc.Mesaj}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private string GetDurumRenk(string durum)
    {
        return durum switch
        {
            "Bekliyor" => "warning",
            "KabulEdildi" => "success",
            "Reddedildi" => "danger",
            "IptalEdildi" => "secondary",
            _ => "light"
        };
    }
}
