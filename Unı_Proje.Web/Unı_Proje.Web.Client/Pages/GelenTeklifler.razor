@page "/gelen-teklifler"
@using Uný_Proje.Web.Client.Services
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject TeklifServis TeklifServis

@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Gelen Teklifler</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-inbox-fill text-primary me-2"></i>
            Gelen Teklifler
        </h2>
        <span class="badge bg-primary fs-6">@teklifler.Count Teklif</span>
    </div>

    @if (yukleniyor)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-3 text-muted">Teklifler yükleniyor...</p>
        </div>
    }
    else if (!teklifler.Any())
    {
        <div class="text-center my-5">
            <div class="fs-1"><span>&#128176;</span></div>
            <h4 class="text-muted mt-3">Henüz teklif almadýnýz</h4>
            <p class="text-muted">Ürünleriniz için alýcýlardan teklifler geldiðinde burada görünecek.</p>
            <a href="/ilanlarim" class="btn btn-primary mt-3">
                <i class="bi bi-list-ul me-2"></i>
                Ýlanlarýma Git
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var teklif in teklifler)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-@GetDurumRenk(teklif.Durum)">
                        <div class="position-relative">
                            <img src="@(teklif.UrunResim ?? "https://via.placeholder.com/300x200?text=Resim+Yok")" 
                                 class="card-img-top" 
                                 style="height: 200px; object-fit: cover;"
                                 alt="@teklif.UrunAd">
                            <span class="position-absolute top-0 end-0 badge bg-@GetDurumRenk(teklif.Durum) m-2">
                                @teklif.DurumText
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-truncate" title="@teklif.UrunAd">
                                @teklif.UrunAd
                            </h5>
                            
                            <div class="alert alert-info small mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-person me-1"></i><strong>@teklif.AliciAd</strong></span>
                                    <small class="text-muted">@teklif.OlusturmaTarihi.ToString("dd.MM.yyyy")</small>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">Sizin Fiyatýnýz:</small>
                                <strong class="text-muted">@teklif.UrunFiyat.ToString("N2") <span>&#8378;</span></strong>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <small class="text-warning">Teklif Edilen:</small>
                                <strong class="text-warning fs-5">@teklif.TeklifTutari.ToString("N2") <span>&#8378;</span></strong>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3 p-2 bg-light rounded">
                                <span class="small">Fark:</span>
                                <strong class="text-danger">
                                    -@((teklif.UrunFiyat - teklif.TeklifTutari).ToString("N2")) <span>&#8378;</span>
                                    <small class="text-muted">
                                        (%@Math.Round((1 - teklif.TeklifTutari / teklif.UrunFiyat) * 100, 0))
                                    </small>
                                </strong>
                            </div>

                            @if (!string.IsNullOrEmpty(teklif.Aciklama))
                            {
                                <div class="alert alert-light small mb-3">
                                    <i class="bi bi-chat-quote me-1"></i>
                                    <strong>Mesaj:</strong> @teklif.Aciklama
                                </div>
                            }

                            @if (teklif.Durum == "Bekliyor")
                            {
                                <div class="d-grid gap-2">
                                    <button class="btn btn-success" @onclick="() => TeklifiKabulEt(teklif)">
                                        <i class="bi bi-check-circle-fill me-1"></i>
                                        Kabul Et
                                    </button>
                                    <button class="btn btn-danger" @onclick="() => TeklifiReddet(teklif)">
                                        <i class="bi bi-x-circle-fill me-1"></i>
                                        Reddet
                                    </button>
                                </div>
                            }
                            else
                            {
                                @if (!string.IsNullOrEmpty(teklif.SaticiYaniti))
                                {
                                    <div class="alert alert-@GetDurumRenk(teklif.Durum) small">
                                        <strong>Yanýtýnýz:</strong> @teklif.SaticiYaniti
                                    </div>
                                }
                                <a href="/urun-detay/@teklif.UrunId" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="bi bi-eye me-1"></i>
                                    Ürünü Görüntüle
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* KABUL ET MODAL *@
@if (kabulModalAcik && seciliTeklif != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Teklifi Kabul Et</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="ModalKapat"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-success">
                        <strong>@seciliTeklif.AliciAd</strong> adlý alýcýnýn 
                        <strong>@seciliTeklif.TeklifTutari.ToString("N2") <span>&#8378;</span></strong> teklifini kabul ediyorsunuz.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yanýt Mesajý (Opsiyonel)</label>
                        <textarea class="form-control" 
                                  @bind="yanitMesaji"
                                  rows="3"
                                  placeholder="Örn: Teklifinizi kabul ediyorum. Ýyi günler dilerim."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="ModalKapat">Ýptal</button>
                    <button type="button" class="btn btn-success" @onclick="KabulOnay" disabled="@islemYapiliyor">
                        @if (islemYapiliyor)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Onayla
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* REDDET MODAL *@
@if (reddetModalAcik && seciliTeklif != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Teklifi Reddet</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="ModalKapat"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <strong>@seciliTeklif.AliciAd</strong> adlý alýcýnýn 
                        <strong>@seciliTeklif.TeklifTutari.ToString("N2") <span>&#8378;</span></strong> teklifini reddediyorsunuz.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ret Mesajý (Opsiyonel)</label>
                        <textarea class="form-control" 
                                  @bind="yanitMesaji"
                                  rows="3"
                                  placeholder="Örn: Üzgünüm, bu fiyata satamýyorum."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="ModalKapat">Ýptal</button>
                    <button type="button" class="btn btn-danger" @onclick="ReddetOnay" disabled="@islemYapiliyor">
                        @if (islemYapiliyor)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Onayla
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TeklifDto> teklifler = new();
    private bool yukleniyor = true;
    private bool kabulModalAcik = false;
    private bool reddetModalAcik = false;
    private TeklifDto? seciliTeklif;
    private string yanitMesaji = "";
    private bool islemYapiliyor = false;

    protected override async Task OnInitializedAsync()
    {
        await TeklifleriYukle();
    }

    private async Task TeklifleriYukle()
    {
        yukleniyor = true;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            var (liste, hata) = await TeklifServis.GelenTeklifleriGetir(token);
            
            if (string.IsNullOrEmpty(hata) && liste != null)
            {
                teklifler = liste;
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Hata: {hata}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            yukleniyor = false;
        }
    }

    private void TeklifiKabulEt(TeklifDto teklif)
    {
        seciliTeklif = teklif;
        yanitMesaji = "Teklifinizi kabul ediyorum. Teþekkürler!";
        kabulModalAcik = true;
    }

    private void TeklifiReddet(TeklifDto teklif)
    {
        seciliTeklif = teklif;
        yanitMesaji = "Üzgünüm, bu fiyata satamýyorum.";
        reddetModalAcik = true;
    }

    private void ModalKapat()
    {
        kabulModalAcik = false;
        reddetModalAcik = false;
        seciliTeklif = null;
        yanitMesaji = "";
    }

    private async Task KabulOnay()
    {
        if (seciliTeklif == null) return;

        islemYapiliyor = true;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            var sonuc = await TeklifServis.TeklifiKabulEt(seciliTeklif.Id, yanitMesaji, token);
            
            if (sonuc.BasariliMi)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Teklif kabul edildi! Alýcýya bildirim gönderildi.");
                ModalKapat();
                await TeklifleriYukle();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Hata: {sonuc.Mesaj}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            islemYapiliyor = false;
        }
    }

    private async Task ReddetOnay()
    {
        if (seciliTeklif == null) return;

        islemYapiliyor = true;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            var sonuc = await TeklifServis.TeklifiReddet(seciliTeklif.Id, yanitMesaji, token);
            
            if (sonuc.BasariliMi)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Teklif reddedildi. Alýcýya bildirim gönderildi.");
                ModalKapat();
                await TeklifleriYukle();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Hata: {sonuc.Mesaj}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            islemYapiliyor = false;
        }
    }

    private string GetDurumRenk(string durum)
    {
        return durum switch
        {
            "Bekliyor" => "warning",
            "KabulEdildi" => "success",
            "Reddedildi" => "danger",
            "IptalEdildi" => "secondary",
            _ => "light"
        };
    }
}
