@page "/admin"
@using Uný_Proje.Web.Client.Services
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject AdminServis AdminServis

@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Admin Paneli</PageTitle>

<div class="container-fluid mt-4">
    
    @if (yukleniyor)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-2 text-muted fs-5">Yükleniyor...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(hata))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @hata
        </div>
        <a href="/" class="btn btn-primary">Ana Sayfaya Dön</a>
    }
    else
    {
        @* Baþlýk *@
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="bi bi-shield-lock-fill text-primary me-2"></i>
                Admin Paneli
            </h2>
            <a href="/" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Ana Sayfa
            </a>
        </div>

        @* Ýstatistik Kartlarý *@
        @if (istatistikler != null)
        {
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title">Toplam Kullanýcý</h6>
                                    <h2 class="mb-0">@istatistikler.ToplamKullanici</h2>
                                    <small>+@istatistikler.YeniKullanicilar son 7 gün</small>
                                </div>
                                <i class="bi bi-people-fill fs-1 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title">Toplam Ürün</h6>
                                    <h2 class="mb-0">@istatistikler.ToplamUrun</h2>
                                    <small>+@istatistikler.BugunEklenenUrunler bugün</small>
                                </div>
                                <i class="bi bi-box-seam fs-1 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title">Toplam Mesaj</h6>
                                    <h2 class="mb-0">@istatistikler.ToplamMesaj</h2>
                                    <small>@istatistikler.ToplamFavori favori</small>
                                </div>
                                <i class="bi bi-chat-dots-fill fs-1 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Kullanýcý Listesi *@
        <div class="card shadow">
            <div class="card-header bg-light">
                <h4 class="mb-0">
                    <i class="bi bi-people me-2"></i>
                    Tüm Kullanýcýlar (@kullanicilar.Count)
                </h4>
            </div>
            <div class="card-body p-0">
                @if (kullanicilar.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-primary">
                                <tr>
                                    <th class="text-dark fw-bold">Profil</th>
                                    <th class="text-dark fw-bold">Kullanýcý Adý</th>
                                    <th class="text-dark fw-bold">Email</th>
                                    <th class="text-dark fw-bold">Telefon</th>
                                    <th class="text-dark fw-bold">Kayýt Tarihi</th>
                                    <th class="text-dark fw-bold">Yetki</th>
                                    <th class="text-center text-dark fw-bold">Ýþlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kullanici in kullanicilar)
                                {
                                    <tr>
                                        <td>
                                            <img src="@(kullanici.ProfilResmiUrl ?? "https://via.placeholder.com/40")" 
                                                 class="rounded-circle" 
                                                 width="40" 
                                                 height="40" 
                                                 style="object-fit: cover;"
                                                 alt="@kullanici.KullaniciAdi">
                                        </td>
                                        <td class="align-middle fw-bold">@kullanici.KullaniciAdi</td>
                                        <td class="align-middle">@kullanici.Email</td>
                                        <td class="align-middle">@(kullanici.Telefon ?? "-")</td>
                                        <td class="align-middle">@kullanici.KayitTarihi.ToString("dd MMM yyyy")</td>
                                        <td class="align-middle">
                                            @if (kullanici.IsAdmin)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-shield-fill"></i> Admin
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Kullanýcý</span>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-info" 
                                                        @onclick="() => DetayGoster(kullanici.Id)"
                                                        title="Detaylarý Gör">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button class="btn btn-sm @(kullanici.IsAdmin ? "btn-warning" : "btn-success")" 
                                                        @onclick="() => AdminYetkisiDegistir(kullanici.Id, !kullanici.IsAdmin)"
                                                        title="@(kullanici.IsAdmin ? "Admin Yetkisini Kaldýr" : "Admin Yetkisi Ver")">
                                                    <i class="bi bi-shield-@(kullanici.IsAdmin ? "slash" : "check")"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger" 
                                                        @onclick="() => KullaniciSil(kullanici.Id)"
                                                        title="Kullanýcýyý Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <p class="text-muted">Kullanýcý bulunamadý.</p>
                    </div>
                }
            </div>
        </div>

        @* Kullanýcý Detay Modal *@
        @if (seciliKullanici != null)
        {
            <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">
                                <i class="bi bi-person-circle me-2"></i>
                                Kullanýcý Detaylarý
                            </h5>
                            <button type="button" class="btn-close" @onclick="() => seciliKullanici = null"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-4 text-center mb-3">
                                    <img src="@(seciliKullanici.Kullanici.ProfilResmiUrl ?? "https://via.placeholder.com/200")" 
                                         class="img-fluid rounded-circle border border-3 border-primary" 
                                         style="max-width: 200px; object-fit: cover;"
                                         alt="@seciliKullanici.Kullanici.KullaniciAdi">
                                </div>
                                <div class="col-md-8">
                                    <h4 class="mb-3">@seciliKullanici.Kullanici.KullaniciAdi</h4>
                                    
                                    <div class="mb-2">
                                        <strong><i class="bi bi-envelope me-2"></i>Email:</strong>
                                        <span class="ms-2">@seciliKullanici.Kullanici.Email</span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(seciliKullanici.Kullanici.Telefon))
                                    {
                                        <div class="mb-2">
                                            <strong><i class="bi bi-telephone me-2"></i>Telefon:</strong>
                                            <span class="ms-2">@seciliKullanici.Kullanici.Telefon</span>
                                        </div>
                                    }

                                    <div class="mb-2">
                                        <strong><i class="bi bi-calendar me-2"></i>Kayýt Tarihi:</strong>
                                        <span class="ms-2">@seciliKullanici.Kullanici.KayitTarihi.ToString("dd MMMM yyyy HH:mm")</span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(seciliKullanici.Kullanici.Bio))
                                    {
                                        <div class="mb-3 mt-3">
                                            <strong><i class="bi bi-info-circle me-2"></i>Hakkýnda:</strong>
                                            <p class="ms-4 mt-2">@seciliKullanici.Kullanici.Bio</p>
                                        </div>
                                    }

                                    <hr />

                                    <h5 class="mb-3">Ýstatistikler</h5>
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <div class="card bg-light">
                                                <div class="card-body">
                                                    <h3 class="text-primary">@seciliKullanici.Istatistikler.UrunSayisi</h3>
                                                    <small>Ürün</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="card bg-light">
                                                <div class="card-body">
                                                    <h3 class="text-success">@seciliKullanici.Istatistikler.MesajSayisi</h3>
                                                    <small>Mesaj</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="card bg-light">
                                                <div class="card-body">
                                                    <h3 class="text-danger">@seciliKullanici.Istatistikler.FavoriSayisi</h3>
                                                    <small>Favori</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="() => seciliKullanici = null">Kapat</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private List<KullaniciItem> kullanicilar = new();
    private IstatistiklerDto? istatistikler;
    private KullaniciDetayDto? seciliKullanici;
    private bool yukleniyor = true;
    private string? hata;

    protected override async Task OnInitializedAsync()
    {
        await VerileriYukle();
    }

    private async Task VerileriYukle()
    {
        yukleniyor = true;
        hata = null;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            // Admin kontrolü
            var adminMi = await AdminServis.AdminMi(token);
            if (!adminMi)
            {
                hata = "Bu sayfayý görüntülemek için admin yetkisine sahip olmalýsýnýz.";
                return;
            }

            // Kullanýcýlarý yükle
            var (kullanicilarResult, kullaniciHata) = await AdminServis.KullanicilarGetir(token);
            if (!string.IsNullOrEmpty(kullaniciHata))
            {
                hata = kullaniciHata;
                return;
            }
            kullanicilar = kullanicilarResult;

            // Ýstatistikleri yükle
            var (istatistiklerResult, istatistikHata) = await AdminServis.IstatistikleriGetir(token);
            istatistikler = istatistiklerResult;
        }
        catch (Exception ex)
        {
            hata = $"Veriler yüklenirken hata oluþtu: {ex.Message}";
            Console.WriteLine($"Admin panel hatasý: {ex}");
        }
        finally
        {
            yukleniyor = false;
        }
    }

    private async Task DetayGoster(int id)
    {
        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            var (detay, hata) = await AdminServis.KullaniciDetayGetir(id, token);
            
            if (detay != null)
            {
                seciliKullanici = detay;
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"? {hata}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task KullaniciSil(int id)
    {
        var onay = await JSRuntime.InvokeAsync<bool>("confirm", "Bu kullanýcýyý ve tüm verilerini silmek istediðinize emin misiniz?");
        if (!onay) return;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            var sonuc = await AdminServis.KullaniciSil(id, token);
            
            if (sonuc.BasariliMi)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"? {sonuc.Mesaj}");
                await VerileriYukle(); // Listeyi yenile
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"? {sonuc.Mesaj}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task AdminYetkisiDegistir(int id, bool yeniDurum)
    {
        var mesaj = yeniDurum ? "Bu kullanýcýya admin yetkisi vermek istediðinize emin misiniz?" 
                              : "Bu kullanýcýnýn admin yetkisini kaldýrmak istediðinize emin misiniz?";
        var onay = await JSRuntime.InvokeAsync<bool>("confirm", mesaj);
        if (!onay) return;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            var sonuc = await AdminServis.AdminYetkisiDegistir(id, yeniDurum, token);
            
            if (sonuc.BasariliMi)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"? {sonuc.Mesaj}");
                await VerileriYukle(); // Listeyi yenile
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"? {sonuc.Mesaj}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }
}
