@page "/favorilerim"
@using Uný_Proje.Web.Client.Services
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject FavoriServis FavoriServis

@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Favorilerim</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-danger">
                    <i class="bi bi-heart-fill me-2"></i>
                    Favorilerim
                </h2>
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Ana Sayfaya Dön
                </a>
            </div>
        </div>
    </div>

    @if (yukleniyor)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-danger" style="width: 3rem; height: 3rem;" role="status"></div>
            <p class="mt-2 text-muted fs-5">Favoriler yükleniyor...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(hata))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @hata
        </div>
    }
    else if (!favoriler.Any())
    {
        <div class="text-center my-5">
            <div class="fs-1"><span>&#128148;</span></div>
            <h4 class="text-muted mt-3">Favori Listeniz Boþ</h4>
            <p class="text-muted">Henüz favorilerinize ürün eklemediniz.</p>
            <a href="/" class="btn btn-danger mt-3">
                <i class="bi bi-search me-2"></i>
                Ürünlere Göz At
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var favori in favoriler)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-card">
                        @* Resim *@
                        <div class="position-relative overflow-hidden card-img-wrapper" @onclick="() => DetayaGit(favori.UrunId)" style="cursor: pointer;">
                            @if (!string.IsNullOrEmpty(favori.ResimUrl))
                            {
                                <img src="@favori.ResimUrl" class="card-img-top" alt="@favori.Ad">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 bg-secondary text-white">
                                    <div class="text-center">
                                        <span class="display-6"><span>&#128247;</span></span>
                                        <div class="small">Resim Yok</div>
                                    </div>
                                </div>
                            }
                            @if (favori.Kategori != null)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-primary m-2 shadow-sm">@favori.Kategori.Ad</span>
                            }
                            
                            @* Favori kalp ikonu *@
                            <button class="position-absolute top-0 start-0 btn btn-sm m-2 bg-white border-0 shadow-sm"
                                    @onclick="() => FavorilerdenCikar(favori.UrunId)" 
                                    @onclick:stopPropagation="true"
                                    title="Favorilerden Çýkar">
                                <i class="bi bi-heart-fill text-danger fs-5"></i>
                            </button>
                        </div>

                        @* Bilgi *@
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate fw-bold text-dark" title="@favori.Ad" @onclick="() => DetayaGit(favori.UrunId)" style="cursor: pointer;">@favori.Ad</h5>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="card-text fw-bold text-success fs-5">@favori.Fiyat.ToString("N2") <span>&#8378;</span></span>
                                </div>
                                <div class="text-muted small mb-2">
                                    <i class="bi bi-calendar-plus"></i> @favori.EklemeTarihi.ToString("dd MMM yyyy")
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => DetayaGit(favori.UrunId)" @onclick:stopPropagation="true">
                                        <i class="bi bi-eye me-1"></i> Detaylarý Gör
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<FavoriItem> favoriler = new();
    private bool yukleniyor = true;
    private string? hata;

    protected override async Task OnInitializedAsync()
    {
        await FavorileriYukle();
    }

    private async Task FavorileriYukle()
    {
        yukleniyor = true;
        hata = null;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            var (items, hataMesaji) = await FavoriServis.FavorileriGetir(token);
            
            if (!string.IsNullOrEmpty(hataMesaji))
            {
                hata = hataMesaji;
            }
            else
            {
                favoriler = items;
            }
        }
        catch (Exception ex)
        {
            hata = $"Beklenmeyen bir hata oluþtu: {ex.Message}";
            Console.WriteLine($"Favori yükleme hatasý: {ex}");
        }
        finally
        {
            yukleniyor = false;
        }
    }

    private async Task FavorilerdenCikar(int urunId)
    {
        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            var sonuc = await FavoriServis.FavorilerdenCikar(urunId, token);
            
            if (sonuc.BasariliMi)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"? {sonuc.Mesaj}");
                await FavorileriYukle(); // Listeyi yenile
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"? {sonuc.Mesaj}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private void DetayaGit(int id)
    {
        Navigation.NavigateTo($"/urun-detay/{id}");
    }
}

