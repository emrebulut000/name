@using Uný_Proje.Web.Client.Models
@inject HttpClient Http
@inject IJSRuntime JSRuntime

<div class="coklu-resim-yukleyici">
    @if (Resimler != null && Resimler.Any())
    {
        <!-- Mevcut Resimler -->
        <div class="row g-2 mb-3">
            @foreach (var resim in Resimler.OrderBy(r => r.Sira))
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="resim-card position-relative">
                        <img src="@resim.ResimUrl" class="img-fluid rounded" alt="Ürün resmi" />
                        
                        @if (resim.AnaResimMi)
                        {
                            <span class="badge bg-primary position-absolute top-0 start-0 m-1">
                                Ana Resim
                            </span>
                        }
                        
                        @if (Duzenlenebilir)
                        {
                            <div class="resim-buttons position-absolute top-0 end-0 m-1">
                                @if (!resim.AnaResimMi)
                                {
                                    <button class="btn btn-sm btn-light" @onclick="() => AnaResimYap(resim.Id)" title="Ana resim yap">
                                        <i class="bi bi-star"></i>
                                    </button>
                                }
                                <button class="btn btn-sm btn-danger" @onclick="() => ResimSil(resim.Id)" title="Sil">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }

    @if (Duzenlenebilir && (Resimler == null || Resimler.Count < 5))
    {
        <!-- Resim Yükleme Alaný -->
        <div class="border rounded p-3 text-center bg-light">
            <i class="bi bi-cloud-upload fs-1 text-muted"></i>
            <p class="mb-2">Resim yüklemek için týklayýn veya sürükleyip býrakýn</p>
            <p class="text-muted small">En fazla 5 resim yükleyebilirsiniz. (@((Resimler?.Count ?? 0))/5)</p>
            
            <InputFile OnChange="ResimSec" accept="image/*" multiple class="form-control" />
            
            @if (yukleniyor)
            {
                <div class="mt-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="text-muted mt-2">Resimler yükleniyor...</p>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public int UrunId { get; set; }
    [Parameter] public List<UrunResimDto>? Resimler { get; set; }
    [Parameter] public bool Duzenlenebilir { get; set; } = false;
    [Parameter] public EventCallback OnResimDegisti { get; set; }

    private bool yukleniyor = false;

    private async Task ResimSec(InputFileChangeEventArgs e)
    {
        var kalanKota = 5 - (Resimler?.Count ?? 0);
        var dosyalar = e.GetMultipleFiles(kalanKota);

        if (!dosyalar.Any())
            return;

        yukleniyor = true;

        try
        {
            var resimUrlListesi = new List<string>();

            foreach (var dosya in dosyalar)
            {
                // Dosya boyut kontrolü (max 5MB)
                if (dosya.Size > 5 * 1024 * 1024)
                {
                    await JSRuntime.InvokeVoidAsync("alert", $"{dosya.Name} çok büyük! Max 5MB olmalý.");
                    continue;
                }

                // Dosyayý base64'e çevir (basit yaklaþým)
                using var stream = dosya.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
                using var ms = new MemoryStream();
                await stream.CopyToAsync(ms);
                var bytes = ms.ToArray();
                var base64 = Convert.ToBase64String(bytes);
                var resimUrl = $"data:{dosya.ContentType};base64,{base64}";

                resimUrlListesi.Add(resimUrl);
            }

            // Backend'e gönder
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            var request = new HttpRequestMessage(HttpMethod.Post, $"https://localhost:7130/api/UrunResim/coklu");
            request.Headers.Add("Authorization", $"Bearer {token}");
            request.Content = JsonContent.Create(new
            {
                UrunId = UrunId,
                ResimUrlListesi = resimUrlListesi,
                AnaResimIndex = Resimler == null || !Resimler.Any() ? 0 : (int?)null
            });

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Resimler baþarýyla yüklendi!");
                await OnResimDegisti.InvokeAsync();
            }
            else
            {
                var hata = await response.Content.ReadAsStringAsync();
                await JSRuntime.InvokeVoidAsync("alert", $"Hata: {hata}");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
        finally
        {
            yukleniyor = false;
        }
    }

    private async Task AnaResimYap(int resimId)
    {
        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            var request = new HttpRequestMessage(HttpMethod.Put, $"https://localhost:7130/api/UrunResim/ana-resim/{resimId}");
            request.Headers.Add("Authorization", $"Bearer {token}");

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                await OnResimDegisti.InvokeAsync();
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    private async Task ResimSil(int resimId)
    {
        var onay = await JSRuntime.InvokeAsync<bool>("confirm", "Bu resmi silmek istediðinizden emin misiniz?");
        if (!onay) return;

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken");
            var request = new HttpRequestMessage(HttpMethod.Delete, $"https://localhost:7130/api/UrunResim/{resimId}");
            request.Headers.Add("Authorization", $"Bearer {token}");

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Resim silindi.");
                await OnResimDegisti.InvokeAsync();
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}");
        }
    }

    public class UrunResimDto
    {
        public int Id { get; set; }
        public int UrunId { get; set; }
        public string ResimUrl { get; set; } = "";
        public int Sira { get; set; }
        public bool AnaResimMi { get; set; }
    }
}

