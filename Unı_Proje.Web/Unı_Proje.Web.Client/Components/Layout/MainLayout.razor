@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Unı_Proje.Web.Client.Services

@* CascadingAuthenticationState artık Routes.razor'da tanımlı, buradan kaldırıldı *@
@* ThemeInitializer artık Routes.razor'da tanımlı, buradan kaldırıldı *@

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="d-flex flex-column min-vh-100 bg-light">

            @* --- ÜST NAVBAR (PROFİL İKONU İLE) --- *@
            <TopNavbar />

            @* --- ORTA İÇERİK --- *@
            <article class="content px-4 py-4 flex-grow-1">
                @Body
            </article>

            @* --- FOOTER (SAYFA ALTI) --- *@
            <footer class="bg-white text-center text-lg-start mt-auto border-top">
                <div class="container p-4">
                    <div class="row">
                        <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                            <h5 class="text-uppercase text-dark fw-bold">
                                <i class="bi bi-bag-heart-fill"></i> Bulut Yazılım
                            </h5>
                            <p class="text-muted">
                                İkinci el eşyalarınızı güvenle satabileceğiniz,
                                ihtiyacınız olanı kolayca bulabileceğiniz öğrenci dostu platform.
                            </p>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                            <h5 class="text-uppercase mb-3" style="font-size: 0.9rem; letter-spacing: 1px;">Hızlı Linkler</h5>
                            <ul class="list-unstyled mb-0">
                                <li><a href="/" class="text-decoration-none text-secondary hover-link">Ana Sayfa</a></li>
                                <li><a href="ilanlarim" class="text-decoration-none text-secondary hover-link">İlanlarım</a></li>
                                <li><a href="yeni-urun" class="text-decoration-none text-secondary hover-link">İlan Ver</a></li>
                            </ul>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                            <h5 class="text-uppercase mb-3" style="font-size: 0.9rem; letter-spacing: 1px;">İletişim</h5>
                            <ul class="list-unstyled text-muted">
                                <li><i class="bi bi-envelope me-2"></i> destek@BulutYazılım.com</li>
                                <li><i class="bi bi-geo-alt me-2"></i> Kampüs, Teknopark</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="text-center p-3 text-secondary" style="background-color: rgba(0, 0, 0, 0.02);">
                    © 2025 Tüm Hakları Saklıdır:
                    <a class="text-dark fw-bold text-decoration-none" href="#">Bulut Yazılım Ekibi</a>
                </div>
            </footer>

        </main>
    </div>
    
    @* ChatBot Widget - Her sayfada görünsün *@
    @* WebAssembly render mode ile çalıştırılır *@
    <ChatBot @rendermode="InteractiveWebAssembly" />

<style>
    /* Linklerin üzerine gelince hafif koyulaşsın */
    .hover-link:hover {
        color: #0d6efd !important; /* Bootstrap Primary Rengi */
    }
</style>
